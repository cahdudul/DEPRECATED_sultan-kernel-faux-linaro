#!/bin/sh
MAKE="256"

## Set compiler location
echo Setting compiler location...
export ARCH=arm
export CROSS_COMPILE=/home/sultan/Downloads/arm-unknown-linux-gnueabi-linaro_4.7.3-2013.01/bin/arm-unknown-linux-gnueabi-

## Build Sultan kernel
make -j$MAKE ARCH=arm
sleep 1
echo Copying Modules
sleep 1
cp -a $(find . -name *.ko -print |grep -v initramfs) /home/sultan/Documents/modules

